<h1>wishlist</h1>
<div class="container">
  <div class="form-container">
    <form action="/artist-search" method="get">
      <input type="text" name="name" />
      <button type="submit">Search for an artist</button>
    </form>
  </div>
</div>

<p></p>

<div class="wishlist">
  {{#each user.wishlist}}
    <p>Artist: {{this.artist}}</p>
    <p>Album: {{this.title}}</p>

    <img src="{{this.image}}" alt="cover {{this.title}}" />
    <form action="/user/wishlist/{{_id}}/delete" method="POST">
      <button type="submit">Delete from wishlist</button>
    </form>
  {{/each}}

</div>